<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"></LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:layout_gravity="center_horizontal">
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/bgshadow"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingLeft="@dimen/paddingSize2"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1.8">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Email: "
                                    android:gravity="top"
                                    android:textColor="#ffffff"
                                    android:id="@+id/textView3" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:textColor="#ffffff"
                                    android:gravity="top"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text=""
                                    android:id="@+id/mailAddress" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Store Name: "
                                    android:gravity="top"
                                    android:textColor="#ffffff"
                                    android:id="@+id/textViewv3" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="2"
                                    android:textColor="#ffffff"
                                    android:gravity="top"
                                    android:layout_height="match_parent"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text=""
                                    android:id="@+id/shopName" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:paddingRight="@dimen/paddingSize2"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:textSize="@dimen/text_size_1"
                                android:textColor="#FFFFFF"
                                android:gravity="center"
                                android:id="@+id/textView2" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:inputType="textPersonName"
                                android:hint="Type Email here"
                                android:ems="10"
                                android:layout_weight="2"
                                android:paddingLeft="@dimen/paddingSize2"
                                android:background="@drawable/search"
                                android:textColor="#ffffff"
                                android:textColorHint="#2f5984"
                                android:id="@+id/filteringText"
                                android:layout_gravity="center_horizontal" />

                            <ListView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:id="@+id/dealerSelector"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="5" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="No Users"
                                android:gravity="center"
                                android:id="@+id/emptyview"
                                android:visibility="gone"
                                android:layout_weight="5"/>

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.05"
                        android:background="#DADADA"
                        android:orientation="vertical"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView211"></LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:gravity="bottom"
                        android:paddingLeft="@dimen/paddingSize"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="MAC Address"
                        android:textStyle="bold"
                        android:textColor="#55FF55"
                        android:id="@+id/textView21" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingLeft="@dimen/paddingSize"
                        android:orientation="horizontal"
                        android:layout_weight="0.5">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1.3">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Wifi"
                                android:id="@+id/textView23" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="94:AB:SA:EB:ED"
                                android:id="@+id/wlanMACDisplay" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Ethernet"
                                android:id="@+id/textView22" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#FFFFFF"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="94:AB:SA:EB:ED"
                                android:id="@+id/eMACDisplay" />
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView212" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:paddingLeft="@dimen/paddingSize"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="GPS Coordinates"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        android:textColor="#55FF55"
                        android:id="@+id/textView26" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:paddingLeft="@dimen/paddingSize"
                        android:orientation="horizontal"
                        android:layout_weight="0.5">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1.3">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Latitude"
                                android:id="@+id/textView24" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textColor="#FFFFFF"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="loading..."
                                android:id="@+id/latDisplay" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Longitude"
                                android:textColor="#FFFFFF"
                                android:id="@+id/textView27" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#FFFFFF"
                                android:layout_weight="1"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="loading..."
                                android:id="@+id/lngDisplay" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center_horizontal"></LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.7"
                        android:paddingLeft="@dimen/paddingSize2"
                        android:paddingRight="@dimen/paddingSize2"
                        android:layout_gravity="center_horizontal">
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Register"
                            android:textSize="@dimen/text_size_3"
                            android:onClick="registerDevice"
                            android:layout_weight="1"
                            android:background="@drawable/msgbutton"
                            android:textColor="#2f5984"
                            android:clickable="false"
                            android:id="@+id/regButton" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:layout_gravity="center_horizontal"></LinearLayout>

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Logout"
                            android:textSize="@dimen/text_size_3"
                            android:onClick="cancel"
                            android:layout_weight="1"
                            android:background="@drawable/msgbutton"
                            android:textColor="#2f5984"
                            android:id="@+id/ccc" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center_horizontal"></LinearLayout>

                </LinearLayout><LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:layout_gravity="center_horizontal"></LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>