<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="itemloader.witellsolutions.tvadvertisement.MainActivity">
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_weight="94"
    android:layout_height="0dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/imagePlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <ImageView
            android:layout_width="144dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:id="@+id/tvbadge"
            android:paddingLeft="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />\

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/netErrorMessage"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="500dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/paddingSize2"
            android:layout_marginBottom="@dimen/paddingSize2"
            android:layout_marginRight="@dimen/paddingSize2"
            android:layout_marginLeft="@dimen/paddingSize2"
            android:background="@drawable/bgnoshadow"
            android:layout_centerVertical="true"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:orientation="vertical"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:src="@drawable/warn"
                        android:id="@+id/imageView" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="5"
                        android:layout_height="0dp"
                        android:textStyle="bold"
                        android:id="@+id/netdownmsg"
                        android:paddingLeft="@dimen/paddingSize2"
                        android:gravity="center"
                        android:text="Please Check Your Internet Connection"
                        android:textColor="#FFFFFF"
                        android:visibility="visible"
                        android:textSize="@dimen/text_size_1" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:layout_height="match_parent"></LinearLayout>

                            <TextView
                                android:layout_width="0dp"
                                android:textColor="#ffffff"
                                android:layout_weight="1"
                                android:gravity="center_horizontal|bottom"
                                android:layout_height="match_parent"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Connecting in 30 seconds"
                                android:id="@+id/rtext" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/updateReminder"
            android:background="@drawable/background_with_shadow"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/paddingSize2"
                android:layout_marginBottom="@dimen/paddingSize2"
                android:layout_marginRight="@dimen/paddingSize2"
                android:layout_marginLeft="@dimen/paddingSize2"
                android:background="@drawable/bgnoshadow"
                android:layout_centerVertical="true"
                android:layout_height="110dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:orientation="vertical"
                    android:layout_height="match_parent"></LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:src="@drawable/updateicon"
                            android:id="@+id/imagesdAJGHsdjkaView" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_weight="2"
                            android:layout_height="0dp"
                            android:textStyle="bold"
                            android:id="@+id/gahusgduj"
                            android:paddingLeft="@dimen/paddingSize2"
                            android:text="Update Available"
                            android:textColor="#FFFFFF"
                            android:visibility="visible"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/text_size_3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1.1"
                            android:orientation="horizontal"
                            android:layout_height="0dp">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="0.5"
                                android:orientation="horizontal"
                                android:layout_height="match_parent"></LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_height="match_parent">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text = "Update"
                                    android:onClick="update"
                                    android:id="@+id/button" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_height="match_parent"></LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="0"
        android:id="@+id/sideLayout"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/sideImageTopPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp">
            <android.support.v4.view.ViewPager
                android:id="@+id/sideImageBottomPlayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="6"
        android:id="@+id/newsBar"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="8"
            android:background="#000099"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/newsText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="#ffffff"
                android:text="this is my text this is my text this is my text this is my text this is my text this is my text end text "
                android:textSize="@dimen/text_size_3"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"/>
        </RelativeLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_weight="1.4"
                android:background="#000000"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="2.5"
                    android:background="#000000"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:textColor="#ffffff"
                        android:text="10"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_2"
                        android:layout_height="match_parent"
                        android:id="@+id/textClock" />
                </LinearLayout>

                <DigitalClock
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:id="@+id/digitalClock" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:background="@drawable/loff"
                    android:onClick="logout"
                    android:id="@+id/button2" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.1"
                    android:background="#000000"
                    android:layout_height="match_parent"></LinearLayout>
            </LinearLayout>
    </LinearLayout>
</LinearLayout>
